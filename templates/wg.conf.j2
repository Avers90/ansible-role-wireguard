# {{ ansible_managed }}

[Interface]
Address = {{ wireguard_address }}
ListenPort = {{ wireguard_port }}
PrivateKey = {{ wireguard_private_key_actual }}

{% if wireguard_nat_enabled %}
PostUp = iptables -t nat -A POSTROUTING -o {{ wireguard_nat_interface_actual }} -j MASQUERADE
PostUp = iptables -A FORWARD -i %i -j ACCEPT
PostUp = iptables -A FORWARD -o %i -j ACCEPT
{% if wireguard_postup_extra %}
PostUp = {{ wireguard_postup_extra }}
{% endif %}

PostDown = iptables -t nat -D POSTROUTING -o {{ wireguard_nat_interface_actual }} -j MASQUERADE
PostDown = iptables -D FORWARD -i %i -j ACCEPT
PostDown = iptables -D FORWARD -o %i -j ACCEPT
{% if wireguard_postdown_extra %}
PostDown = {{ wireguard_postdown_extra }}
{% endif %}
{% endif %}

{% if wireguard_dns %}
DNS = {{ wireguard_dns }}
{% endif %}

